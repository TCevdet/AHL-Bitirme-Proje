@model AlisverisSepetiVM
<form method="post">
	<br />
	<div class="container">
		<div class="card shadow border-0">

			<div class="card-header bg-secondary bg-gradient text-light ml-0 py-4">
				<div class="row px-4">
					<div class="col-6">
						<h5 class="pt-2 text-white">
							Sipariş Detayı
						</h5>
					</div>
					<div class="col-6 text-end">
						<a asp-action="Index" class="btn btn-outline-danger btn-sm">Sepete Dön</a>
					</div>
				</div>
			</div>
			<div class="card-body">
				<div class="container rounded p-2">
					<div class="row">
						<div class="col-12 col-lg-6 pb-4">
							<div class="row">
								<h4 class="d-flex justify-content-between align-items-center mb-3">
									<span class="text-info">Gönderim Detay:</span>
								</h4>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>İsim</label>
								</div>
								<div class="col-9">
									<input asp-for="SiparisBaslik.Isim" class="form-control" />
									<span asp-validation-for="SiparisBaslik.Isim" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Telefon No</label>
								</div>
								<div class="col-9">
									<input asp-for="SiparisBaslik.TelefonNo" class="form-control" />
									<span asp-validation-for="SiparisBaslik.TelefonNo" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Adres</label>
								</div>
								<div class="col-9">
									<input asp-for="SiparisBaslik.Adres" class="form-control" />
									<span asp-validation-for="SiparisBaslik.Adres" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Şehir</label>
								</div>
								<div class="col-9">
									<input asp-for="SiparisBaslik.Sehir" class="form-control" />
									<span asp-validation-for="SiparisBaslik.Sehir" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>İlçe</label>
								</div>
								<div class="col-9">
									<input asp-for="SiparisBaslik.Ilce" class="form-control" />
									<span asp-validation-for="SiparisBaslik.Ilce" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Posta Kodu</label>
								</div>
								<div class="col-9">
									<input asp-for="SiparisBaslik.PostaKodu" class="form-control" />
									<span asp-validation-for="SiparisBaslik.PostaKodu" class="text-danger"></span>
								</div>
							</div>
						</div>
						<div class="col-12 col-lg-5 offset-lg-1">
							<h4 class="d-flex justify-content-between align-items-center mb-3">
								<span class="text-info">Sipariş Özeti:</span>
							</h4>
							<ul class="list-group mb-3">
								@foreach (var siparisdetay in Model.AlisverisSepetiListe)
								{
									<li class="list-group-item d-flex justify-content-between">
										<div>
											<h6 class="my-0">@siparisdetay.Urun.UrunAdi</h6>
											<small class="text-muted">Miktar: @siparisdetay.Adet</small>
										</div>
										<span class="text-muted"> @((siparisdetay.Fiyat * siparisdetay.Adet).ToString("c")) </span>
									</li>
								}


								<li class="list-group-item d-flex justify-content-between bg-light">
									<small class="text-info">Toplam Tutar (TL)</small>
									<strong class="text-info">@Model.SiparisBaslik.SiparisToplamTutar.ToString("c")</strong>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<div class="card-footer">
				<div class="row">
					<div class="col-12 col-md-8 pt-2">
						<p style="color:maroon; font-size:14px;">
							Tahmini Teslimat Tarihi:
							@DateTime.Now.AddDays(7).ToShortDateString() - @DateTime.Now.AddDays(14).ToShortDateString()

						</p>
					</div>
					<div class="col-12 col-md-4">
						<button type="submit" value="Place Order" class="btn btn-primary form-control">Siparişi Onayla</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>