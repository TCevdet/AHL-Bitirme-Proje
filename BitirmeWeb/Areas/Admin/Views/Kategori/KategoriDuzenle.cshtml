@model Kategori

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Kategori Düzenle</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3 row p-1">
            <label asp-for="Ad" class="p-0"></label>
            <input asp-for="Ad" class="form-control" />
            <span asp-validation-for="Ad" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Siparis" class="p-0"></label>
            <input asp-for="Siparis" class="form-control" />
            <span asp-validation-for="Siparis" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Düzenle</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Kategori" asp-action="Index" class="btn btn-outline-secondary form-control">Listeye Dön</a>
            </div>
        </div>





    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}