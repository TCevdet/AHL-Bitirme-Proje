@model List<Kategori>

<div class="container">
    
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Kategoriler
            </h2>
            </div>
        <div class="col-6 text-end">
            <a asp-controller="Kategori" asp-action="KategoriEkle" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Yeni Kategori Ekle
            </a>
        </div>
    </div>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            Kategori Adı
        </th>
        <th>
            Siparis
        </th>
        <th></th>
    </tr>
    <thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u=>u.Siparis))
            {
            <tr>
                <td>@obj.Ad</td>
                <td>@obj.Siparis</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                    <a asp-controller="Kategori" asp-action="KategoriDuzenle" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Düzenle
                    </a>
                            <a asp-controller="Kategori" asp-action="KategoriSil" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Sil
                            </a>
                    </div>
                </td>
                
            </tr>
            }
        </tbody>
    </thead>
</table>
</div>