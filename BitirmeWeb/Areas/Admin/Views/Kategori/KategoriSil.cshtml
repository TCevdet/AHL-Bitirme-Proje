    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Ad" class="p-0"></label>
            <input asp-for="Ad" disabled class="form-control" />
            
        </div>
